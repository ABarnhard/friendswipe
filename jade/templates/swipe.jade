ion-view(title='Swipe')
  ion-header-bar(align-title='left').bar-stable
    h1.title: a(href='#/menu') FriendSwipe
    .buttons
      a.logo(href='#/match'): img(src='assets/logo_background.png')
  ion-content(ng-controller='SwipeCtrl').padding
    td-cards.container
      td-card.card.friend(ng-repeat='card in cards', on-destroy='cardDestroyed($index)', on-swipe-left='cardSwipedLeft($index)', on-swipe-right='cardSwipedRight($index)')
        .item.item-divider Friends Name
        i.ion-person(style='font-size: 240px')
    .buttonContainer
      img.unfollow(src='assets/unfollow_btn-01.png')
      img.reconnect(src='assets/reconnect_btn-01.png')
    
